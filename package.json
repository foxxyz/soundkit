{
  "name": "soundkit",
  "version": "2.0.4",
  "description": "Easy Sound Management & Playback",
  "main": "index.js",
  "files": [
    "types/*",
    "index.js"
  ],
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "setupFiles": [
      "./test/mocks.js"
    ],
    "testEnvironment": "jsdom",
    "verbose": true
  },
  "peerDependencies": {
    "vue": ">2"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "events": "^3.3.0",
    "nanoid": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxxyz/soundkit"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/plugin-proposal-throw-expressions": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.4.7"
  },
  "author": "Ivo Janssen <hello@ivo.la>",
  "contributors": [
    "Andrew Burke <andrewsburke@gmail.com>"
  ],
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "eqeqeq": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "info",
            "error"
          ]
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": [
        "error"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
