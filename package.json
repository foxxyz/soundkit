{
  "name": "soundkit",
  "version": "2.0.6",
  "description": "Easy Sound Management & Playback",
  "main": "index.js",
  "files": [
    "types/*",
    "index.js"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "setupFiles": [
      "./test/mocks.js"
    ],
    "testEnvironment": "jsdom",
    "transform": {},
    "verbose": true
  },
  "peerDependencies": {
    "vue": ">2"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "events": "^3.3.0",
    "nanoid": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxxyz/soundkit"
  },
  "devDependencies": {
    "eslint": "^8.30.0",
    "eslint-plugin-jest": "^27.1.7",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1"
  },
  "author": "Ivo Janssen <hello@ivo.la>",
  "contributors": [
    "Andrew Burke <andrewsburke@gmail.com>"
  ],
  "license": "MIT",
  "type": "module",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "eqeqeq": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "info",
            "error"
          ]
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": [
        "error"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
